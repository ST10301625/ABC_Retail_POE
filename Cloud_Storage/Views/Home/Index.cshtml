@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex flex-wrap justify-content-center mt-4">
    <!-- Card for Products -->
    <div class="card m-2 fade-in hover-animate" style="width: 15rem;">
        <img src="~/images/walkin.jpg" class="card-img-top card-img-fixed" alt="Products" />
        <div class="card-body">
            <h5 class="card-title">Products</h5>
            <p class="card-text">Explore our wide range of products.</p>
            <a href="@Url.Action("Index", "Products")" class="btn btn-brown">Go to Products</a>
        </div>
    </div>

    <!-- Card for Customers -->
    <div class="card m-2 fade-in hover-animate" style="width: 15rem;">
        <img src="~/images/customers.jpg" class="card-img-top card-img-fixed" alt="Customers" />
        <div class="card-body">
            <h5 class="card-title">Customers</h5>
            <p class="card-text">Manage and view customer details.</p>
            <a href="@Url.Action("Index", "Customers")" class="btn btn-brown">Go to Customers</a>
        </div>
    </div>

    <!-- Card for Orders -->
    <div class="card m-2 fade-in hover-animate" style="width: 15rem;">
        <img src="~/images/orders.jpg" class="card-img-top card-img-fixed" alt="Orders" />
        <div class="card-body">
            <h5 class="card-title">Orders</h5>
            <p class="card-text">View and manage your orders.</p>
            <a href="@Url.Action("Index", "Orders")" class="btn btn-brown">Go to Orders</a>
        </div>
    </div>

    <!-- Card for Files -->
    <div class="card m-2 fade-in hover-animate" style="width: 15rem;">
        <img src="~/images/policy.jpg" class="card-img-top card-img-fixed" alt="Files" />
        <div class="card-body">
            <h5 class="card-title">Contracts</h5>
            <p class="card-text">Upload and manage your contracts.</p>
            <a href="@Url.Action("Index", "Files")" class="btn btn-brown">Go to Contracts</a>
        </div>
    </div>
</div>

<style>
    /* Fixed size for card images */
    .card-img-fixed {
        height: 180px; /* Fixed height */
        object-fit: cover; /* Scale the image to fill the space */
        width: 100%; /* Ensure image width matches the card width */
    }

    /* Animation styles */
    .fade-in {
        opacity: 0; /* Start hidden */
        transform: translateY(20px); /* Start slightly down */
        transition: opacity 0.4s ease-out, transform 0.4s ease-out; /* Animation timing */
    }

        .fade-in.visible {
            opacity: 1; /* Fully visible */
            transform: translateY(0); /* Move to original position */
        }

    /* Hover animation styles */
    .hover-animate {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .hover-animate:hover {
            transform: translateY(-10px) scale(1.05); /* Lift and scale up the card */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Add a shadow for depth */
        }

    /* Card text color */
    .card-body {
        color: black; /* Set text color to black */
    }

    /* Custom button style */
    .btn-brown {
        background-color: black; /* Set button background to brown */
        color: white; /* Set button text color to white */
    }

        .btn-brown:hover {
            background-color: grey; /* Darker brown on hover */
        }
</style>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Check if the card is in view
        function checkVisibility() {
            $('.fade-in').each(function () {
                var elementBottom = $(this).offset().top + $(this).outerHeight();
                var windowBottom = $(window).scrollTop() + $(window).height();

                // If the card is in view, add the 'visible' class
                if (elementBottom < windowBottom) {
                    $(this).addClass('visible');
                }
            });
        }

        // Initial check
        checkVisibility();

        // Check visibility on scroll
        $(window).on('scroll', function () {
            checkVisibility();
        });
    });
</script>

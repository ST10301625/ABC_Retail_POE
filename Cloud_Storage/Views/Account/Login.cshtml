@model Cloud_Storage.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

            .form-group input[type="checkbox"] {
                width: auto;
                display: inline-block;
            }

    .error-message {
        color: red;
        font-size: 0.9em;
    }

    .btn {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }

    .link {
        margin-top: 10px;
        display: block;
        color: #007bff;
        text-decoration: none;
    }

        .link:hover {
            text-decoration: underline;
        }
</style>

<div class="login-container">
    <h2>Login</h2>

    <form asp-action="Loginn" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="error-message"></span>
        </div>
        <div class="form-group">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe"></label>
        </div>
    </form>

    <div class="text-center">
        <a class="link" asp-controller="Products" asp-action="Index">Login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

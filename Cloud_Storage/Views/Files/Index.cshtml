@model List<Cloud_Storage.Models.FileModel>

<!-- Banner Section -->
<div class="banner">
    <img src="~/images/abc_retail.jpg" alt="Banner Image" />
    <div class="banner-text">
        <h1>Files Page</h1>
        <p>Upload and manage your files here.</p>
    </div>
</div>

<h1 class="text-center my-4">Files</h1>

<!-- Display any messages -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">
        @TempData["Message"]
    </div>
}

<div class="container">
    <!-- Upload form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Upload a File</h5>
        </div>
        <div class="card-body">
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Choose a file to upload:</label>
                    <input type="file" name="file" class="form-control-file" required />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Upload</button>
            </form>
        </div>
    </div>

    <!-- Display uploaded files -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Uploaded Files</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var file in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@file.Name</strong><br />
                                <small>
                                    Size: @file.DisplaySize <br />
                                    Last Modified: @file.LastModified?.ToString("g")
                                </small>
                            </div>
                            <a class="btn btn-outline-secondary btn-sm" asp-action="DownloadFile" asp-route-fileName="@file.Name">Download</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-center">No files found.</p>
            }
        </div>
    </div>
</div>

<style>
    /* Banner styling */
    .banner {
        width: 100%;
        height: 360px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        margin-top: -5px; /* Remove space above banner */
    }

        .banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease; /* Smooth transition */
        }

        .banner:hover img {
            transform: scale(1.05); /* Slight zoom on hover */
        }

    .banner-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.5);
        padding: 20px;
        border-radius: 10px;
        color: white;
        text-align: center;
    }

        .banner-text h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .banner-text p {
            font-size: 1.2rem;
        }

    /* Table and Page Styling */
    .container {
        margin-top: 20px;
    }
</style>
